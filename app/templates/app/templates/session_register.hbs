<div class="h800">
    <div class="row m-n">
        <div class="col-md-4 col-md-offset-4 m-t-lg">
            <section class="panel">
                <header class="panel-heading bg bg-dark lter text-center">
                    Register
                </header>
                <div id="block-alert"></div>
                <form action="index.html" class="panel-body" id="form-register">
                    <div class="form-group">
                        <label class="control-label"> Email </label>
